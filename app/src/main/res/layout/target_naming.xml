<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/target_RelativeLayout"
    android:layout_width="match_parent"
    android:minWidth="400dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_border_infos"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/general_margin">

    <FrameLayout
        android:id="@+id/target_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/target_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Recensement des cibles"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/target_backarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/ic_undo_black_24dp"
            android:layout_margin="@dimen/general_margin"/>

    </FrameLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/target_list_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/general_margin">

        <EditText
            android:id="@+id/target_naming_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:minEms="7"
            android:hint="Cible principale"/>
    </LinearLayout>
    <Button
        android:id="@+id/addTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:drawableStart="@drawable/ic_add_circle_outline_green_24dp"
        android:drawablePadding="@dimen/general_margin"
        android:text="Ajouter une cible"/>

</LinearLayout>