<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:transitionName="transition"

    android:id="@+id/page1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="stellarnear.yfa_dealer.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>



    <RelativeLayout
        android:id="@+id/RelatTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_anchor="@+id/toolbar"
        app:layout_anchorGravity="bottom"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/background_spell_list_title"
        >

    <TextView
        android:id="@+id/Titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Liste des sorts"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"
        android:textSize="25sp"

        />

    <ImageButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_send_black_24dp"
        style="?android:attr/borderlessButtonStyle"
        android:gravity="center_vertical"
        tools:ignore="ContentDescription"
          />

        <FrameLayout
            android:id="@+id/mythic_pts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="@dimen/general_margin"
            android:foregroundGravity="center"
            android:layout_centerVertical="true"
            tools:ignore="ContentDescription"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_embrassed_energy"/>

            <TextView
                android:id="@+id/mythic_pts_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:shadowColor="@color/black"
                android:textColor="@color/colorPrimary"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="10.0"/>

        </FrameLayout>

    </RelativeLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        app:layout_anchor="@+id/RelatTitle"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"
        android:weightSum="100"
        android:layout_marginTop="100dp">

        <ScrollView
            android:id="@+id/main_scroll_relat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="89"
            >

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textAlignment="center"
                />
        </ScrollView>

        <LinearLayout
            android:id="@+id/side_bar"
            android:layout_width="0dp"
            android:layout_weight="11"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/general_margin">



        </LinearLayout>


    </LinearLayout>








</android.support.design.widget.CoordinatorLayout>
