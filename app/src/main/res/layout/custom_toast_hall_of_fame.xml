<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/toast_RelativeLayout_item_creation"
    android:layout_width="300dp"
    android:minWidth="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_border_fame"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/general_margin">

    <FrameLayout
        android:id="@+id/toast__item_creation_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/toast_item_creation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Enregistrement au Panthéon"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/general_margin">

        <EditText
            android:id="@+id/hall_of_fame_foe_name"
            android:layout_width="wrap_content"
            android:hint="Nom de l'ennemi"
            android:gravity="center"
            android:inputType="text"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/hall_of_fame_location"
            android:hint="Lieu"
            android:inputType="text"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/hall_of_fame_details"
            android:hint="Autre détails"
            android:inputType="text"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
</LinearLayout>