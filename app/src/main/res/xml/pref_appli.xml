<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceScreen
        android:key="infos"
        android:icon="@drawable/ic_info_black_24dp"
        android:title="Infos"
        android:summary="Résumé d'informations sur l'application"/>

    <PreferenceScreen
        android:key="pref_appli_para"
        android:summary="Options de application"
        android:icon="@drawable/ic_build_black_24dp"
        android:title="Paramètres de l'application" />

    <PreferenceScreen
        android:key="pref_appli_refresh"
        android:summary="Réinitialise ou rafraichit des paramètres"
        android:icon="@drawable/ic_undo_black_24dp"
        android:title="Reset des paramètres" />

    <PreferenceScreen
        android:icon="@drawable/ic_file_upload_black_24dp"
        android:key="import_save"
        android:summary="Charge les informations"
        android:title="Charger" />

    <PreferenceScreen
        android:icon="@drawable/ic_file_download_black_24dp"
        android:key="export_save"
        android:summary="Sauvegarde les informations"
        android:title="Sauvegarder" />

</PreferenceScreen>